<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="20dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    android:id="@+id/post_card_view">

    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradiant"
        >

        <TextView
            android:id="@+id/singleQuotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:padding="5dp">

            <ImageView
                android:id="@+id/post_like_btn"
                android:layout_width="2dp"
                android:layout_height="24dp"
                android:clickable="true"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/ic_icons8_heart__1_"
                tools:ignore="ImageContrastCheck" />


            <ImageView
                android:id="@+id/post_copy_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:clickable="true"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/ic_icons8_copy__1_" />

            <ImageView
                android:id="@+id/post_save_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:clickable="true"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/ic_baseline_save_alt_24"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/post_share_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@null"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/ic_icons8_share__1_"
                tools:ignore="ImageContrastCheck" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>